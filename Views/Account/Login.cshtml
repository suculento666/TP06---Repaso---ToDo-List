@{
    ViewBag.Title = "Login";
}
<section class = "Login">
<header>
<h2>Iniciar sesión</h2>
<form method="post" asp-action="LoginGuardar" asp-controller="Account">
    <label>Usuario:</label>
    <input type="text" name="username" required /><br/>
    <label>Contraseña:</label>
    <input type="password" name="password" required /><br/>
    <input type="submit" value="Ingresar" />
</form>
@if(ViewBag.Mensaje != null)
{
    <div style="color:red">@ViewBag.Mensaje</div>
}
</header>
</section class>